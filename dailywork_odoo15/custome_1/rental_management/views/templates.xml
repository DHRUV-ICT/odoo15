<odoo>
    <data>

        <!-- explicit list view definition -->
        <!--   TREE VIEW     -->
        <record model="ir.ui.view" id="templates_list">
            <field name="name">templates list</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="is_rental"/>
                    <field name="rental_type_id"/>
                </field>
            </field>
        </record>


        <!--  FORM VIEW  -->
        <record model="ir.ui.view" id="templates_form">
            <field name="name">templates form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']" position="after">
                    <page string="Rental">
                        <group>
                            <field name="is_rental"/>
                            <field name="rental_type_id" attrs="{'invisible': [('is_rental', '=', False)]}"
                                   required="True"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>