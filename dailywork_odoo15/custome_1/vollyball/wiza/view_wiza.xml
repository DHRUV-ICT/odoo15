<odoo>
    <data>

        <!--tree view-->
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="vollyball_list_wiza">
            <field name="name">wizard list</field>
            <field name="model">wiza.wiza</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="position_wiza"/>

                </tree>
            </field>
        </record>


        <!-- form  view -->
        <record model="ir.ui.view" id="vollyball_form_wiza">
            <field name="name">wizard form</field>
            <field name="model">wiza.wiza</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="position_wiza"/>

                        <footer>
                            <button string="create_wiza" name="create" type="object" class="btn-primary" />
                            <button string="write_wiza" name="write" type="object" class="btn-primary"/>
<!--                            <button string="unlink" name="unlink" type="object" class="btn-primary"/>-->
                        </footer>

                    </group>

                </form>
            </field>
        </record>



        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="wiza_action_window">
            <field name="name">wizard_icon</field>
            <field name="res_model">wiza.wiza</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>